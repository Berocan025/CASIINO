# Casino Portfolio Website - BERAT K
# .htaccess Configuration

# Enable URL Rewriting
RewriteEngine On

# Security Headers (Only if mod_headers is available)
<IfModule mod_headers.c>
    # HSTS (only for HTTPS)
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload" env=HTTPS
    
    # XSS Protection
    Header always set X-XSS-Protection "1; mode=block"
    
    # Content Type Options
    Header always set X-Content-Type-Options nosniff
    
    # Frame Options
    Header always set X-Frame-Options SAMEORIGIN
    
    # Referrer Policy
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Compression (Optional - only if mod_deflate is available)
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
</IfModule>

# Browser Caching (Optional - only if mod_expires is available)
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/ico "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType application/pdf "access plus 1 month"
    ExpiresByType text/html "access plus 1 hour"
</IfModule>

# File Protection
<Files "*.sqlite">
    Require all denied
</Files>

<Files "*.log">
    Require all denied
</Files>

<Files "config.php">
    Require all denied
</Files>

<Files ".htaccess">
    Require all denied
</Files>

# Directory Protection
<IfModule mod_autoindex.c>
    Options -Indexes
</IfModule>

# Protect database directory (if mod_authz_core is available)
<IfModule mod_authz_core.c>
    <Directory "database/">
        Require all denied
    </Directory>
    
    <Directory "includes/">
        Require all denied
    </Directory>
    
    <Directory "backups/">
        Require all denied
    </Directory>
</IfModule>

# Pretty URLs
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Homepage
RewriteRule ^$ index.php [L]

# Pages
RewriteRule ^about/?$ pages/about.php [L]
RewriteRule ^services/?$ pages/services.php [L]
RewriteRule ^portfolio/?$ pages/portfolio.php [L]
RewriteRule ^gallery/?$ pages/gallery.php [L]
RewriteRule ^contact/?$ pages/contact.php [L]

# Newsletter pages
RewriteRule ^newsletter-confirm/?$ newsletter-confirm.php [L,QSA]
RewriteRule ^unsubscribe/?$ unsubscribe.php [L,QSA]

# Admin area
RewriteRule ^admin/?$ admin/index.php [L]
RewriteRule ^admin/([^/]+)/?$ admin/$1.php [L]

# Error pages
ErrorDocument 404 /404.php
ErrorDocument 403 /404.php
ErrorDocument 500 /404.php

# Prevent hotlinking (commented out to avoid issues)
# RewriteCond %{HTTP_REFERER} !^$
# RewriteCond %{HTTP_REFERER} !^https?://(www\.)?yoursite\.com [NC]
# RewriteCond %{REQUEST_URI} \.(gif|jpg|jpeg|png|bmp|mp3|mp4|avi|wav)$ [NC]
# RewriteRule . - [F]

# PHP Settings (only if mod_php is available)
<IfModule mod_php.c>
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
    php_value max_execution_time 300
    php_value max_input_vars 3000
    php_flag display_errors Off
    php_flag log_errors On
</IfModule>

<IfModule mod_php7.c>
