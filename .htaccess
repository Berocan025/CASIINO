# Simple .htaccess Configuration
RewriteEngine On

# Block direct access to sensitive files
<Files "*.sqlite">
    Require all denied
</Files>

<Files "*.log">
    Require all denied
</Files>

<Files "config.php">
    Require all denied
</Files>

# Directory Protection
Options -Indexes

# Pretty URLs
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Homepage
RewriteRule ^$ index.php [L]

# Pages
RewriteRule ^about/?$ pages/about.php [L]
RewriteRule ^services/?$ pages/services.php [L] 
RewriteRule ^portfolio/?$ pages/portfolio.php [L]
RewriteRule ^gallery/?$ pages/gallery.php [L]
RewriteRule ^contact/?$ pages/contact.php [L]

# Newsletter pages
RewriteRule ^newsletter-confirm/?$ newsletter-confirm.php [L,QSA]
RewriteRule ^unsubscribe/?$ unsubscribe.php [L,QSA]

# Admin area
RewriteRule ^admin/?$ admin/index.php [L]
RewriteRule ^admin/([^/]+)/?$ admin/$1.php [L]

# Error pages
ErrorDocument 404 /404.php